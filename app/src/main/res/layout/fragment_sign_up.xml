<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.fragments.signup.SignUpFragment">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_signup" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Регистрация по номеру"
        android:textColor="#8E8B8B"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_edit_signup"
        android:drawablePadding="15dp"
        android:hint="0997 55 06 56"
        android:inputType="phone"
        android:paddingHorizontal="15dp"
        android:textColor="#B1B1B1"
        android:textColorHint="#B1B1B1" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_signup"
        android:drawablePadding="15dp"
        android:hint="Ваш код"
        android:paddingHorizontal="15dp"
        android:textColor="#B1B1B1"
        android:textColorHint="#B1B1B1" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_send"
            app:backgroundTint="#FFC107"
            app:cornerRadius="30dp"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_signup"
            android:hint="Получить Код"
            android:textColorHint="@color/white"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_confirm"
            app:backgroundTint="#FFC107"
            app:cornerRadius="30dp"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_signup"
            android:hint="Подвердить"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

    </FrameLayout>

    <Button
        android:id="@+id/btn_google"
        app:backgroundTint="#FFC107"
        app:cornerRadius="30dp"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_signup"
        android:hint="Google"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Отправить снова"
        android:textColor="#FFC107" />

</LinearLayout>